
extends base

block append script
	script(type='text/javascript' src='edit.bundle.js')

block content
	div.container
		div.home
			nav.navbar
				div.navbar__link(id='home')
					div.navbar__link--svgbox
						svg.navbar__link--svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 512 512" style="transform: rotate(360deg);")
							path(d="M401.4 224h-214l83-79.4c11.9-12.5 11.9-32.7 0-45.2s-31.2-12.5-43.2 0L89 233.4c-6 5.8-9 13.7-9 22.4v.4c0 8.7 3 16.6 9 22.4l138.1 134c12 12.5 31.3 12.5 43.2 0 11.9-12.5 11.9-32.7 0-45.2l-83-79.4h214c16.9 0 30.6-14.3 30.6-32 .1-18-13.6-32-30.5-32z")
					div.navbar__link--text Home
				div.navbar__link(id='logout')
					div.navbar__link--text Logout
					div.navbar__link--svgbox
						svg.navbar__link--svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 -1 24 24" style="transform: rotate(360deg);")
							g(fill="none")
								path(d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1" stroke="#002fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
			div.pipes
				div.pipes__pipe.pipes__pipe--left
				div.pipes__pipe.pipes__pipe--right
			div.main
				div.edit
					form.form--edit.form--edit--data(autocomplete='off')
						h3.edit__title Update Your Data.
						div.form__body.edit__body
							div.form__group.form__group--name
								input.form__group-input(id='nameInput' type='text' value=`${user.name}`)
								label.form__group-label(id='nameLabel' for='nameInput') Full Name
							div.form__group.form__group--email
								input.form__group-input(id='emailInput' type='email' value=`${user.email}`)
								label.form__group-label(id='emailLabel' for='emailInput') Email
							button.form__submit-btn.edit__submit-btn(type='submit')
								span.form__submit-btn--text.edit__submitdata-btn--text Update Data
					form.form--edit.form--edit--profile(autocomplete='off')
						h3.edit__title Update Your Profile Photo.
						div.form__body.edit__body
							div.form__group__profile
								img.form__group__profile--preview(id="uploadImagePreview" src=`/assets/images/${user.photo}`)
								input.form__group__profile--input(id="uploadImageInput" type="file" accept="image/*")
								label.form__group__profile--label(id="uploadImageLabel" for='uploadImageInput') Select Photo
							button.form__submit-btn.edit__submit-btn(type='submit')
								span.form__submit-btn--text.edit__submitdata-btn--text Update Profile Photo
			div.pipes
				div.pipes__pipe.pipes__pipe--left
				div.pipes__pipe.pipes__pipe--right
			div.main
				form.form--edit.form--edit--pass(autocomplete='off')
					h3.edit__title Change Your Password.
					div.form__body.edit__body
						div.form__group.form__group--pass.form__group--curpass
							input.form__group-input(id='CurPassInput' type='password')
							label.form__group-label(id='CurPassLabel' for='passInput') Current Password
							img.form__group-input--eyesvg.eyesvgforcurpass(src='assets/svg/passShow.svg')
						div.form__group.form__group--pass.form__group--newpass
							input.form__group-input(id='NewPassInput' type='password')
							label.form__group-label(id='NewPassLabel' for='passInput') New Password
							img.form__group-input--eyesvg.eyesvgfornewpass(src='assets/svg/passShow.svg')
						button.form__submit-btn.edit__submit-btn(type='submit')
							span.form__submit-btn--text.edit__submitpass-btn--text Change Password