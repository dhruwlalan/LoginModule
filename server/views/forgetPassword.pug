
extends base

block append script
	- if ( process.env.FENV === 'development')
		script(type='text/javascript' src='/vendor.bundle.js')
		script(type='text/javascript' src='/forgetPassword.bundle.js')
	- else
		- if (bundle.vendor)
			script(type='text/javascript' src=`/${bundle.vendor}`)
		script(type='text/javascript' src=`/${bundle.forgetPassword}`)

block content
	form.form.form--forget-password(autocomplete='off')
		div.form__header
			a(href='/login' tabindex='-1')
				svg.form__header--back(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" role="img" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 512 512" style="transform: rotate(360deg);")
					path(d="M401.4 224h-214l83-79.4c11.9-12.5 11.9-32.7 0-45.2s-31.2-12.5-43.2 0L89 233.4c-6 5.8-9 13.7-9 22.4v.4c0 8.7 3 16.6 9 22.4l138.1 134c12 12.5 31.3 12.5 43.2 0 11.9-12.5 11.9-32.7 0-45.2l-83-79.4h214c16.9 0 30.6-14.3 30.6-32 .1-18-13.6-32-30.5-32z")
			h3.form__header--title Forget Password?
			h5.form__header--subtitle Enter your email address to reset your password.
		div.form__body
			div.form__group.form__group--email
				input.form__group-input(id='emailInput' type='email')
				label.form__group-label(id='emailLabel' for='emailInput') Email
			button.btn.btn__forget-password(id='submit' type='submit')
				spann.btn__forget-password--text Send Reset Link